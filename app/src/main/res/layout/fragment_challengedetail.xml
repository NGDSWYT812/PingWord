<?xml version="1.0" encoding="utf-8"?>
<ping.Lib.layout.RoundRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:rv_backgroundColor="#a9d9fa"
    app:rv_cornerRadius="@dimen/grid_5"
    app:rv_strokeColor="@color/mainColor"
    app:rv_strokeWidth="@dimen/grid_1">

    <ImageView
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/grid_10"
        android:scaleType="centerInside"
        android:src="@drawable/challenge_icon"
        />

    <TextView
        android:id="@+id/tv_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_msg"
        android:layout_marginRight="@dimen/grid_10"
        android:layout_marginTop="@dimen/grid_5"
        android:text="1/5"
        android:textColor="@color/text_color_tv1"
        android:textSize="@dimen/grid_16"/>

    <ping.Lib.layout.RoundTextView
        android:id="@+id/rtv_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_page"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/grid_50"
        android:layout_marginRight="@dimen/grid_50"
        android:layout_marginTop="@dimen/grid_20"
        android:gravity="center"
        android:padding="@dimen/grid_10"
        android:text="apple"
        android:textColor="@color/text_color_tv0"
        android:textSize="@dimen/grid_17"
        android:textStyle="bold"
        app:rv_cornerRadius="@dimen/grid_5"
        app:rv_strokeColor="@color/text_color_tv0"
        app:rv_strokeWidth="@dimen/grid_1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rtv_word"
        android:layout_marginTop="@dimen/grid_20"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ping.Lib.layout.RoundTextView
            android:id="@+id/rtv_select_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_50"
            android:layout_marginRight="@dimen/grid_50"
            android:layout_marginTop="@dimen/grid_20"
            android:drawableLeft="@drawable/icon_a"
            android:drawablePadding="@dimen/grid_5"
            android:gravity="center_vertical"
            android:padding="@dimen/grid_10"
            android:singleLine="true"
            android:text="sssss"
            android:textSize="@dimen/grid_17"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeColor="@color/text_color_tv0"
            app:rv_strokeWidth="@dimen/grid_1"/>

        <ping.Lib.layout.RoundTextView
            android:id="@+id/rtv_select_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_50"
            android:layout_marginRight="@dimen/grid_50"
            android:layout_marginTop="@dimen/grid_20"
            android:drawableLeft="@drawable/icon_b"
            android:drawablePadding="@dimen/grid_5"
            android:gravity="center_vertical"
            android:padding="@dimen/grid_10"
            android:singleLine="true"
            android:text="sssss"
            android:textSize="@dimen/grid_17"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeColor="@color/text_color_tv0"
            app:rv_strokeWidth="@dimen/grid_1"/>

        <ping.Lib.layout.RoundTextView
            android:id="@+id/rtv_select_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_50"
            android:layout_marginRight="@dimen/grid_50"
            android:layout_marginTop="@dimen/grid_20"
            android:drawableLeft="@drawable/icon_c"
            android:drawablePadding="@dimen/grid_5"
            android:gravity="center_vertical"
            android:padding="@dimen/grid_10"
            android:singleLine="true"
            android:text="sssss"
            android:textSize="@dimen/grid_17"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeColor="@color/text_color_tv0"
            app:rv_strokeWidth="@dimen/grid_1"/>

        <ping.Lib.layout.RoundTextView
            android:id="@+id/rtv_select_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/grid_50"
            android:layout_marginRight="@dimen/grid_50"
            android:layout_marginTop="@dimen/grid_20"
            android:drawableLeft="@drawable/icon_d"
            android:drawablePadding="@dimen/grid_5"
            android:gravity="center_vertical"
            android:padding="@dimen/grid_10"
            android:singleLine="true"
            android:text="sssss"
            android:textSize="@dimen/grid_17"
            app:rv_cornerRadius="@dimen/grid_5"
            app:rv_strokeColor="@color/text_color_tv0"
            app:rv_strokeWidth="@dimen/grid_1"/>
    </LinearLayout>
</ping.Lib.layout.RoundRelativeLayout>