<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <com.ping.pingword.widgets.MyImageView
        android:id="@+id/im_base"
        android:layout_width="@dimen/grid_300"
        android:layout_height="@dimen/grid_110"
        android:layout_centerVertical="true"
        android:scaleType="matrix"
        android:src="@drawable/base"/>

    <LinearLayout
        android:layout_width="@dimen/grid_300"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/grid_5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/grid_170"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.ping.pingword.widgets.MyImageView
                android:id="@+id/im_ct4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:src="@drawable/ct4"/>

            <com.ping.pingword.widgets.MyImageView
                android:id="@+id/im_ct6"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/grid_5"
                android:layout_weight="1"
                android:scaleType="matrix"
                android:src="@drawable/ct6"/>
        </LinearLayout>

        <com.ping.pingword.widgets.MyImageView
            android:id="@+id/im_ct8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/grid_5"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@drawable/ct8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/grid_300"
        android:layout_height="@dimen/grid_100"
        android:layout_marginTop="@dimen/grid_5"
        android:orientation="horizontal">

        <com.ping.pingword.widgets.MyImageView
            android:id="@+id/im_yasi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@drawable/yasi"/>

        <com.ping.pingword.widgets.MyImageView
            android:id="@+id/im_tuofu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/grid_5"
            android:layout_weight="1"
            android:scaleType="matrix"
            android:src="@drawable/tuofu"/>

    </LinearLayout>
</LinearLayout>